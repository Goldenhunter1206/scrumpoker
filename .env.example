# .env.example - Copy to .env and configure for your deployment

# Server Configuration
PORT=3000
NODE_ENV=development
APP_TITLE="Scrum Poker"
APP_SUBTITLE="Collaborative Story Point Estimation for Your Team"

# Session Management
MAX_SESSIONS=50
SESSION_TIMEOUT=86400000

# CORS Configuration (for production)
CORS_ORIGIN=*

# Render.com specific (auto-configured)
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Production Security (recommended)
# TRUST_PROXY=true
# HELMET_ENABLED=true

# Redis session storage
# REDIS_URL=redis://default:<password>@redis-xxxxx:6379

# the field for the story points
JIRA_STORYPOINT_FIELD=10016